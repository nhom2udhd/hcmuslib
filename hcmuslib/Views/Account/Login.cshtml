@model hcmuslib.Models.LoginModel

@{
    ViewBag.Title = "Đăng Nhập";
}

<section id="title" class="emerald">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
                <p>Pellentesque habitant morbi tristique senectus et netus et malesuada</p>
            </div>
            <div class="col-sm-6">
                <ul class="breadcrumb pull-right">
                    <li><a href="index.html">Home</a></li>
                    <li><a href="#">Pages</a></li>
                    <li class="active">Registration</li>
                </ul>
            </div>
        </div>
    </div>
</section><!--/#title-->

<section id="registration" class="container">
    <h3 class="text-center">
        Đăng nhập<br/>
        <small>Thư viện yêu cầu bạn phải là thành viên để được sử dụng các dịch vụ của thư viện</small>
    </h3>
    <div id="login-form">
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl, @id="login-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-sm-4 control-label", @for = "username" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "", @placeholder = "Username", @name="username" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 control-label", @for = "password" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="form-group">
                @Html.CheckBoxFor(m => m.RememberMe)
                @*@Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })*@
                @Html.Label("Remember me", new { @class = "col-sm-offset-4 col-sm-8" })
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" class="btn btn-default btn-md" id="login-submit">Sign in</button>
                </div>
            </div>

            @*<p>
                    @Html.ActionLink("Register", "Register") if you don't have an account.
                </p>*@
        }
    </div>
</section>


